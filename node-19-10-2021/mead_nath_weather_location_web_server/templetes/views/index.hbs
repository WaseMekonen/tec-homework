        <form id="form">
          <input type="text" name="cityname" id="city-input" placeholder="Enter a City" class="city-input" />
          <input type="submit" value="Send" class="city-input" />
        </form>
        <div class="location-display" id="location">location</div>
      </div>
    </main>
    {{>footer}}
    <script src="js/app.js"></script>
